@model ControleContas.Models.Usuario

<h2>Registrar</h2>
<form asp-action="Register" method="post">
    <div>
        <label>Nome:</label>
        <input type="text" asp-for="Nome" required />
    </div>
    <div>
        <label>Email:</label>
        <input type="email" asp-for="Email" required />
    </div>
    <div>
        <label>Senha:</label>
        <input type="password" asp-for="Senha" required />
    </div>
    <button type="submit">Registrar</button>
</form>
